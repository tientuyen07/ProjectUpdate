<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview_border"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/txt_trang_thai_nv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_kg"
        android:layout_centerHorizontal="true"
        android:text="NV chưa có lịch"
        android:textColor="#20B2AA" />
    <TextView
        android:id="@+id/txt_trang_thai_phong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_trang_thai_nv"
        android:layout_centerHorizontal="true"
        android:text="Còn chỗ"
        android:textColor="#20B2AA" />
</RelativeLayout>